# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
BOT_TOKEN=your_telegram_bot_token_here

# OpenAI Configuration for AI Assistant
OPENAI_API_KEY=your_openai_api_key_here

# Optional: Environment Configuration
ENVIRONMENT=production

# Database Configuration (TinyDB uses local JSON files)
# No additional database configuration needed for TinyDB

# Logging Level
LOG_LEVEL=INFO

# Bot Configuration
MAX_AI_MESSAGES_PER_DAY=10
MAX_PHOTOS_PER_PROFILE=3
MAX_VIDEO_DURATION=15

# Keep-alive Configuration
KEEP_ALIVE_PORT=8000
KEEP_ALIVE_HOST=0.0.0.0

# Payment System Configuration
# TON Cryptocurrency Payments
TON_WALLET=your_ton_wallet_address_here
TON_API_KEY=your_ton_api_key_from_tonapibot
TON_TESTNET=true

# Telegram Stars Payments (no additional configuration needed)
# Payments are handled directly through Telegram Bot API

